<Window x:Class="ITSViewer.Views.ViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="768" Width="1024"  WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Title="智能交通三维视景系统" Loaded="Window_Loaded">
    <!--Icon="Images/login.png"-->
    <DockPanel>
        <StackPanel Orientation="Vertical">
            <StackPanel  Orientation="Horizontal">
                <Button Content="加载视景" Command="{Binding PlayViewer}" Margin="10,6,0,7" Width="60"></Button>
                <Button Content="停止视景" Command="{Binding StopViewer}" Margin="10,6,0,7" Width="60"></Button>
            </StackPanel>
            <StackPanel>
                <Border  BorderBrush="#FFFFFF"  BorderThickness="1" Background="#ECE9D8" Height="701">
                    <DockPanel Name="OsgViewer" LastChildFill="true">
                        <!--<ContentControl Name="InVideo1" Template="{StaticResource RealTimeVideo}" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>-->
                    </DockPanel>
                </Border>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>
